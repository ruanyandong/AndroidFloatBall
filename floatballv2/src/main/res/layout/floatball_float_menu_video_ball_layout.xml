<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@drawable/floatball_float_menu_video_bg"
    android:id="@+id/floatball_float_menu_video_ball_layout">

    <ImageView
        android:id="@+id/float_menu_video_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/ninja"/>
    
    <ImageView
        android:id="@+id/video_controller"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/floatball_video_play"
        android:layout_gravity="center"/>

</FrameLayout>